<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ParentLayout"
    android:orientation="vertical"
    tools:context="com.example.android.musicappstructure.NowPlayingActivity">

    <TextView
        style="@style/TextView"
        android:text="@string/text_now_playing" />

    <Button
        android:id="@+id/artist_details"
        style="@style/Button"
        android:text="@string/artist_details" />

    <Button
        android:id="@+id/album_details"
        style="@style/Button"
        android:text="@string/album_details" />

</LinearLayout>